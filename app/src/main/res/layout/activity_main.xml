<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#F44B4B"
    android:backgroundTint="#E23E3E"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="236dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorLink="#0C0000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_offline_btn"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/Creame"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="Create Offline"
        android:textColor="#000000"
        android:textColorHighlight="#96FF0A"
        android:textColorHint="#2DEDD5"
        android:textColorLink="#2BBBC2"
        app:rippleColor="#000000"
        app:strokeColor="#8AFF06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Or"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_online_game_btn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/Creame"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="Create Online Game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Or"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/game_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/autour_one"
        android:hint="Enter game Id"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/join_online_game_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/Creame"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="Join Game Online" />


</LinearLayout>